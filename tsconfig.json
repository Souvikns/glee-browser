{
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "ES2017",
    "declaration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./lib/**/*"]
}
