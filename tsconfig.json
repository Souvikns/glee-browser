{
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "ES2017",
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["lib"]
}
